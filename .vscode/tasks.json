{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "python3: http.server 8000 start",
      "type": "shell",
      "command": "python3",
      "args": ["-m", "http.server", "8000"],
      "options": {
        "cwd": "${workspaceFolder}/dist"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ""
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Serving .*",
          "endsPattern": "\\.\\.\\."
        }
      },
      "presentation": {
        "echo": true,
        "panel": "dedicated",
        "showReuseMessage": false
      }
    },
    {
      "type": "npm",
      "script": "start",
      "problemMatcher": [],
      "label": "npm: start",
      "detail": "parcel serve ./src/index.html"
    },
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "label": "npm: build",
      "detail": "parcel build ./src/index.html"
    },
    {
      "type": "npm",
      "script": "clean",
      "problemMatcher": [],
      "label": "npm: clean",
      "detail": "rm dist/bundle.js"
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "label": "npm: lint",
      "detail": "eslint src/**/*.js test/**/*.js"
    },
    {
      "type": "npm",
      "script": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "label": "npm: test",
      "detail": "mocha"
    }
  ]
}
