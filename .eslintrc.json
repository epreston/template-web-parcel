{
  "root": true,
  "env": {
    "es2022": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "no-unused-vars": "off"
  }
}
